<% /* ========= QUIZ CARD =========
  *  req.vars:
  *    quiz         – объект Quiz (обяз.)
  *    currentUser  – для прав (не обяз.)
  *    showDesc     – false  ▸ прячет описание   (опц.)
  *    showActions  – false  ▸ убирает edit/del  (опц.)
  */ %>
<% const _showDesc = (typeof showDesc === 'undefined') ? true : showDesc; %>
<% const _showActions = (typeof showActions === 'undefined') ? true : showActions; %>
<% const canEdit = currentUser && (currentUser._id.equals(quiz.user?._id) || currentUser.role === 'admin'); %>

<div class="col">
    <div class="card quiz-card h-100 border-0 shadow-sm">
        <!-- cover -->
        <img src="<%= quiz.cover || '/images/quiz-placeholder.svg' %>"
             class="card-img-top" alt="cover">

        <div class="card-body d-flex flex-column p-3">
            <h5 class="card-title mb-1 fw-semibold"><%= quiz.title %></h5>

            <% if (quiz.user) { %>
                <p class="card-subtitle mb-2 small text-muted">
                    <i class="bi bi-person-circle me-1"></i><%= quiz.user.name %>
                </p>
            <% } %>

            <% if (_showDesc) { %>
                <p class="card-text small flex-grow-1"><%= quiz.description || '' %></p>
            <% } %>

            <div class="d-flex justify-content-between small text-muted mb-2">
                <span><i class="bi bi-question-circle me-1"></i><%= quiz.questionsCount %></span>
                <span><i class="bi bi-star-fill text-warning me-1"></i><%= (quiz.avgScore ?? 0).toFixed(1) %></span>
            </div>

            <div class="d-flex gap-2">
                <a href="/quizzes/<%= quiz._id %>" class="btn btn-primary btn-sm w-100">Пройти</a>

                <% if (canEdit && _showActions) { %>
                    <div class="dropdown">
                        <button class="btn btn-outline-light btn-sm dropdown-toggle" data-bs-toggle="dropdown"></button>
                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2"
                                   href="/quizzes/<%= quiz._id %>/edit">
                                    <i class="bi bi-pencil-square"></i>Ред.
                                </a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <button class="dropdown-item d-flex align-items-center gap-2 text-danger"
                                        data-bs-toggle="modal" data-bs-target="#del-<%= quiz._id %>">
                                    <i class="bi bi-trash"></i>Удалить
                                </button>
                            </li>
                        </ul>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <% if (canEdit && _showActions) { %>
        <!-- modal delete -->
        <div class="modal fade" id="del-<%= quiz._id %>" tabindex="-1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content bg-dark border-secondary">
                    <div class="modal-header border-secondary">
                        <h5 class="modal-title">Удалить квиз?</h5>
                        <button type="button" class="btn-close btn-close-white"
                                data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        «<%= quiz.title %>» исчезнет навсегда. Точно?
                    </div>
                    <div class="modal-footer border-secondary">
                        <button type="button" class="btn btn-secondary"
                                data-bs-dismiss="modal">Отмена
                        </button>
                        <form action="/quizzes/<%= quiz._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Удалить</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>
