<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<div class="col-12 col-md-10 col-lg-6 mx-auto">
    <div class="card shadow-sm border-0">
        <div class="card-body p-4 p-sm-5">

            <h1 class="h4 text-center mb-4">Новый&nbsp;квиз</h1>
            <%- include('../../partials/flash') %>

            <form action="/quizzes"
                  method="POST"
                  class="needs-validation"
                  novalidate>

                <!-- title -->
                <div class="form-floating mb-3">
                    <input id="title"
                           name="title"
                           type="text"
                           class="form-control"
                           placeholder="Название" required>
                    <label for="title"><i class="bi bi-fonts me-1"></i>Название</label>
                    <div class="invalid-feedback">Нужно название.</div>
                </div>

                <!-- description -->
                <div class="form-floating mb-4">
          <textarea id="description"
                    name="description"
                    class="form-control"
                    style="height: 120px"
                    placeholder="Описание"></textarea>
                    <label for="description"><i class="bi bi-card-text me-1"></i>Описание</label>
                </div>

                <!-- public switch -->
                <div class="form-check form-switch mb-4">
                    <input class="form-check-input"
                           type="checkbox"
                           role="switch"
                           id="isPublic"
                           name="isPublic"
                           checked>
                    <label class="form-check-label" for="isPublic">
                        Сделать публичным
                    </label>
                </div>

                <button class="btn btn-primary w-100 py-2">
                    <i class="bi bi-plus-circle me-1"></i>Создать квиз
                </button>
            </form>

        </div>
    </div>
</div>

<script>
    (() => {
        'use strict';
        document.querySelectorAll('.needs-validation').forEach(f => {
            f.addEventListener('submit', e => {
                if (!f.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                f.classList.add('was-validated');
            }, false);
        });
    })();
</script>
