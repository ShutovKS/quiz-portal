<h1 class="h3 mb-3"><%= quiz.title %></h1>
<p class="mb-4"><%= quiz.description %></p>

<form action="/quizzes/<%= quiz._id %>" method="POST">
    <% questions.forEach((q, i) => { %>
        <div class="card mb-3 text-bg-dark border-secondary">
            <div class="card-body">
                <p class="fw-bold mb-2"><%= i + 1 %>. <%= q.text %></p>

                <% if (q.type === 'single' || q.type === 'truefalse') { %>
                    <% q.options.forEach(o=>{ %>
                        <div class="form-check mb-1">
                            <input
                                    class="form-check-input"
                                    type="radio"
                                    name="answers[<%= q._id %>]"
                                    id="opt-<%= o._id %>"
                                    value="<%= o._id %>"
                                    required
                            >
                            <label class="form-check-label" for="opt-<%= o._id %>"><%= o.text %></label>
                        </div>
                    <% }) %>

                <% } else if (q.type === 'multiple') { %>
                    <% q.options.forEach(o=>{ %>
                        <div class="form-check mb-1">
                            <input
                                    class="form-check-input"
                                    type="checkbox"
                                    name="answers[<%= q._id %>]"
                                    id="opt-<%= o._id %>"
                                    value="<%= o._id %>"
                            >
                            <label class="form-check-label" for="opt-<%= o._id %>"><%= o.text %></label>
                        </div>
                    <% }) %>

                <% } else if (q.type === 'text') { %>
                    <input
                            type="text"
                            name="answers[<%= q._id %>]"
                            class="form-control"
                            required
                    >
                <% } %>

            </div>
        </div>
    <% }) %>
    <button type="submit" class="btn btn-primary">Отправить</button>
</form>