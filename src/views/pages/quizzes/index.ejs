<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">Все квизы</h1>
    <% if (currentUser) { %>
        <a href="/quizzes/new" class="btn btn-outline-light">+ Новый квиз</a>
    <% } %>
</div>

<% if (quizzes.length) { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% quizzes.forEach(q => { %>
            <div class="col">
                <div class="card h-100 text-bg-dark border-secondary">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= q.title %></h5>
                        <% if (q.user) { %>
                            <p class="card-subtitle mb-2 text-muted">от <%= q.user.name %></p>
                        <% } %>
                        <div class="mt-auto">
                            <a href="/quizzes/<%= q._id %>" class="btn btn-primary btn-sm">Пройти</a>
                            <% if (currentUser && (currentUser._id.toString() === q.user?._id.toString() || currentUser.role === 'admin')) { %>
                                <a href="/quizzes/<%= q._id %>/edit" class="btn btn-outline-light btn-sm ms-2">Ред.</a>
                                <form
                                        action="/quizzes/<%= q._id %>?_method=DELETE"
                                        method="POST"
                                        style="display:inline"
                                >
                                    <button class="btn btn-sm btn-outline-danger ms-1">Х</button>
                                </form>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <p class="text-center text-muted">Квизы не найдены.</p>
<% } %>
