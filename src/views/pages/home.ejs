<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <% if (currentUser) { %>
            Привет, <%= currentUser.name %>!
        <% } else { %>
            Добро пожаловать!
        <% } %>
    </h1>

    <% if (currentUser) { %>
        <a href="/quizzes/new" class="btn btn-outline-light">
            <i class="bi bi-plus-lg"></i> Создать квиз
        </a>
    <% } %>
</div>

<% if (typeof quizzes !== 'undefined' && quizzes.length) { %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% quizzes.forEach(q => { %>
            <div class="col">
                <div class="card h-100 text-bg-dark border-secondary">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= q.title %></h5>
                        <p class="card-text flex-grow-1"><%= q.description %></p>
                        <a href="/quizzes/<%= q._id %>" class="btn btn-primary mt-auto">
                            Пройти
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <p class="text-center text-muted">Новых квизов пока нет.</p>
<% } %>
