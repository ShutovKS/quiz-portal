<h1 class="h4 mb-4 fw-semibold d-flex align-items-center gap-2">
    <i class="bi bi-tags"></i> Управление категориями
</h1>
<%- include('../../partials/flash') %>

<div class="card mt-4">
    <div class="card-header bg-primary text-white">
        <i class="bi bi-tags"></i> Категории
    </div>
    <div class="card-body">
        <form class="row g-2 mb-3" method="POST" action="/admin/categories">
            <div class="col-auto">
                <input type="text" name="name" class="form-control" placeholder="Новая категория" required>
            </div>
            <div class="col-auto">
                <button type="submit" class="btn btn-success">Добавить</button>
            </div>
        </form>
        <ul class="list-group">
            <% categories.forEach(cat => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <form class="d-flex flex-grow-1 gap-2 align-items-center" method="POST" action="/admin/categories/<%= cat._id %>">
                        <input type="text" name="name" value="<%= cat.name %>" class="form-control form-control-sm" required style="max-width: 250px;">
                        <button type="submit" class="btn btn-sm btn-outline-primary">Сохранить</button>
                    </form>
                    <form method="POST" action="/admin/categories/<%= cat._id %>/delete" onsubmit="return confirm('Удалить категорию?');">
                        <button type="submit" class="btn btn-sm btn-outline-danger ms-2">Удалить</button>
                    </form>
                </li>
            <% }) %>
            <% if (!categories.length) { %>
                <li class="list-group-item text-muted">Нет категорий</li>
            <% } %>
        </ul>
    </div>
</div> 