<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<h1 class="h4 mb-4 fw-semibold d-flex align-items-center gap-2">
    <i class="bi bi-people"></i> Пользователи
</h1>

<%- include('../../partials/flash') %>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th class="text-center">Роль</th>
            <th class="text-end">Действия</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach(u => { %>
            <tr class="<%= u._id.equals(currentUser._id) ? 'table-info' : '' %>">
                <!-- name -->
                <td class="fw-semibold"><%= u.name %></td>

                <!-- email -->
                <td><%= u.email %></td>

                <!-- role badge -->
                <td class="text-center">
                    <% if (u.role === 'admin') { %>
                        <span class="badge bg-danger"><i class="bi bi-shield-lock"></i> admin</span>
                    <% } else { %>
                        <span class="badge bg-secondary">user</span>
                    <% } %>
                </td>

                <!-- actions -->
                <td class="text-end">
                    <% if (!u._id.equals(currentUser._id)) { %>
                        <div class="dropdown">
                            <button class="btn btn-sm btn-outline-light dropdown-toggle"
                                    data-bs-toggle="dropdown"></button>
                            <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end">
                                <!-- toggle role -->
                                <li>
                                    <form action="/admin/users/<%= u._id %>/toggle-admin" method="POST">
                                        <button class="dropdown-item d-flex gap-2 align-items-center" type="submit">
                                            <i class="bi bi-person-gear"></i>
                                            <%= u.role === 'admin' ? 'Сделать юзером' : 'Сделать админом' %>
                                        </button>
                                    </form>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <!-- delete -->
                                <li>
                                    <button class="dropdown-item d-flex gap-2 align-items-center text-danger"
                                            data-bs-toggle="modal"
                                            data-bs-target="#del-<%= u._id %>">
                                        <i class="bi bi-trash"></i> Удалить
                                    </button>
                                </li>
                            </ul>
                        </div>
                    <% } %>
                </td>
            </tr>

            <!-- delete modal -->
            <div class="modal fade" id="del-<%= u._id %>" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content bg-dark border-secondary">
                        <div class="modal-header border-secondary">
                            <h5 class="modal-title">Удалить пользователя?</h5>
                            <button type="button" class="btn-close btn-close-white"
                                    data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <%= u.name %> &lt;<%= u.email %>&gt;
                        </div>
                        <div class="modal-footer border-secondary">
                            <button class="btn btn-secondary" data-bs-dismiss="modal">Отмена</button>
                            <form action="/admin/users/<%= u._id %>?_method=DELETE" method="POST">
                                <button class="btn btn-danger">Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        <% }) %>
        </tbody>
    </table>
</div>
