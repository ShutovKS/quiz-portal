<link rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<h1 class="h4 mb-4 fw-semibold d-flex align-items-center gap-2">
    <i class="bi bi-people"></i> Пользователи
</h1>

<%- include('../../partials/flash') %>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-light">
        <tr>
            <th>Имя</th>
            <th>Email</th>
            <th class="text-center">Роль</th>
            <th class="text-end">Действия</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach(u => { %>
            <tr class="<%= u._id.equals(currentUser._id) ? 'table-info' : '' %>">
                <!-- name -->
                <td class="fw-semibold"><%= u.name %></td>

                <!-- email -->
                <td><%= u.email %></td>

                <!-- role badge -->
                <td class="text-center">
                    <% if (u.role === 'admin') { %>
                        <span class="badge bg-danger"><i class="bi bi-shield-lock"></i> admin</span>
                    <% } else { %>
                        <span class="badge bg-secondary">user</span>
                    <% } %>
                </td>

                <!-- actions -->
                <td class="text-end">
                    <% if (!u._id.equals(currentUser._id)) { %>
                    <div class="admin-action-btns d-inline">
                        <form action="/admin/users/<%= u._id %>/toggle-admin" method="POST" class="d-inline">
                            <button class="btn btn-sm btn-outline-secondary me-1" title="<%= u.role === 'admin' ? 'Сделать юзером' : 'Сделать админом' %>">
                                <i class="bi bi-person-gear"></i>
                            </button>
                        </form>
                        <button class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#del-<%= u._id %>" title="Удалить">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                    <% } %>
                </td>
            </tr>

            <!-- delete modal -->
            <div class="modal fade modal-custom-mint" id="del-<%= u._id %>" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">
                                <i class="bi bi-exclamation-triangle-fill text-warning"></i>
                                Удалить пользователя?
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Закрыть"></button>
                        </div>
                        <div class="modal-body">
                            <strong><%= u.name %></strong> &lt;<%= u.email %>&gt;
                        </div>
                        <div class="modal-footer">
                            <button class="btn btn-outline-secondary" data-bs-dismiss="modal">Отмена</button>
                            <form action="/admin/users/<%= u._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button class="btn btn-danger">Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        <% }) %>
        </tbody>
    </table>
</div>

<!-- Toast container -->
<div id="toast-container" style="position: fixed; top: 1.5rem; right: 1.5rem; z-index: 1080;"></div>
<script src="/javascripts/main.js"></script>
